.fork
	abs()
	bottom 10px
	left 0
	right 0
	font-size 14px
	text-align center
	
	a 
		color #2796de;
		text-decoration none
		border-bottom 1px solid lighten(#2796de, 70%);
		
		&:hover
			color black
			border-color rgba(0,0,0,.2);
			
			
@media (max-height 400px) {
	.fork {
		rel()
		bottom auto
	}
}